GR. 7+16
DIM A$(160)
OFFSET=0
screen=PEEK($59)*256+PEEK($58)
SETCOLOR 2,0,14
SETCOLOR 1,1,7
OPEN #1,4,0,"D:ABEJUARE.BMP"
. BGET #1,ADR(A$),160
WHILE OFFSET<160*25
    BGET #1,ADR(A$),160
    FOR I=1 TO 160
        dbyte=PEEK(ADR(A$)+I-1)
        POKE screen+I-1+OFFSET,dbyte
    NEXT I
    OFFSET=OFFSET+160
WEND
PAUSE 1000
END