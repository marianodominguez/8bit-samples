GRAPHICS 10+16:POKE 704,0
PI=3.14159265
FOR J=1 TO 8:POKE 704+J,$70+J:NEXT J
RX=5:RY=10
FOR C=1 TO 8
  FOR TH=-PI TO PI STEP PI/100
    X=(RAND(5)+RX)*COS(TH)
    Y=(RAND(7)+RY)*SIN(TH)
    COLOR C:PLOT X+40,96-Y
  NEXT TH
  RX=RX+2:RY=RY+5
NEXT C
DO 
  FOR J=0 TO 6
  POKE 705+J,$70+J
  PAUSE 20
  POKE 705+J,0
  NEXT J
LOOP