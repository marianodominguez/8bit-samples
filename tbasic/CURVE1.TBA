100 REM ********************
110 REM *   TEST GR 8      *
120 PI=3.141592
130 R=60
140 GRAPHICS 8+16
150 SETCOLOR 1,1,14:SETCOLOR 2,0,2:COLOR 1
160 FOR I=0 TO 360 STEP 3
170   X=R*SIN(TH)
180   Y=R*COS(TH)
190   X1=R*1.3*SIN(TH)
200   Y1=R*1.5*SIN(TH)
210   X2=X1+160
220   Y2=96-Y1
230   TH=I*PI/180
240   XS=X+160
250   YS=96-Y
260   IF XS>0 AND XS<319 AND YS>0 AND YS<191
270     PLOT X2,Y2:DRAWTO XS,YS
280   ENDIF 
290 NEXT I
300 CONSOL=PEEK($D01F)
310 IF CONSOL<>6 THEN GOTO 300
